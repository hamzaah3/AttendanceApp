# Copy this file to .env and fill in your values.

# Firebase (required for login/register)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
# Optional – for Analytics (e.g. web build)
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Expo API routes (backend-in-Expo). When set, app uses these instead of local storage.
# e.g. http://localhost:8080 or https://your-deployed-app.com
# EXPO_PUBLIC_API_ORIGIN=

# MongoDB connection string (server-only). From Atlas: Connect → Drivers → copy URI.
# Required when using API routes. Do not use EXPO_PUBLIC_ (never expose in client).
# MONGODB_URI=mongodb+srv://user:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
# Optional: database name (default: attendance)
# MONGODB_DATABASE=attendance
